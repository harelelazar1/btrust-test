<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="NGOCR API" time-out="5000000">
    <listeners>
        <listener class-name="utilities.TestListener"/>
        <listener class-name="utilities.SuiteListener"/>
    </listeners>

    <test name="Green Id API">
        <classes>
            <class name="api.ngocr.israelId.greenId.SanityTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Blue Id API">
        <classes>
            <class name="api.ngocr.israelId.blueId.SanityTest"/>
            <class name="api.ngocr.israelId.blueId.Errorhandling"/>
        </classes>
    </test>

    <test name="Bio Id API">
        <classes>
            <class name="api.ngocr.israelId.bioId.SanityTest"/>
            <class name="api.ngocr.israelId.bioId.ErrorHandling"/>
        </classes>
    </test>

    <test name="Israel Old Dl API">
        <classes>
            <class name="api.ngocr.dl.oldDl.SanityTest"/>
        </classes>
    </test>

    <test name="Israel New Dl API">
        <classes>
            <class name="api.ngocr.dl.newDl.SanityTest"/>
        </classes>
    </test>

    <test name="Old MRZ API">
        <classes>
            <class name="api.ngocr.mrz.oldMrz.SanityTest"/>
        </classes>
    </test>

    <test name="New MRZ API">
        <classes>
            <class name="api.ngocr.mrz.newMrz.SanityTest"/>
        </classes>
    </test>

    <test name="Stay Permit API">
        <classes>
            <class name="api.ngocr.StayPermit.SanityTest"/>
        </classes>
    </test>

    <test name="Credit Card API">
        <classes>
            <class name="api.ngocr.creditCard.SanityTest"/>
        </classes>
    </test>


</suite> <!-- Suite -->